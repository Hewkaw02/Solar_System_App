<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Phichaya_1911310512.View.IFPage.MercuryPage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Margin="24">
                <Image Source="mars"/>
            <Label x:Name="ALabel" Text="{Binding A}" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="BLabel" Text="{Binding B}" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="CLabel" Text="{Binding C}" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="DLabel" Text="{Binding D}" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="ELabel" Text="{Binding E}" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="FLabel" Text="{Binding F}" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                <Button x:Name="MClose" Text="Close"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>